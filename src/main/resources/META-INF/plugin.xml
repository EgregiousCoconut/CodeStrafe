<idea-plugin>
    <id>com.codestrafe</id>
    <name>CodeStrafe</name>
    <vendor>Samuel George</vendor>

    <description>
        CodeStrafe: Game-inspired, accessibility-focused navigation system for programming.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <startupActivity implementation="com.codestrafe.CodeStrafeStartupActivity"/>

        <applicationService serviceImplementation="com.codestrafe.CodeStrafeCapsLockService"/>
        <applicationService serviceImplementation="com.codestrafe.CodeStrafeHoldMovementService"/>
    </extensions>

    <actions>
        <action id="CodeStrafe.ToggleMode"
                class="com.codestrafe.ToggleCodeStrafeModeAction"
                text="Toggle CodeStrafe Navigation Mode"
                description="Toggle CodeStrafe Navigation Mode">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="F8"/>
        </action>

        <action id="CodeStrafe.DebugState"
                class="com.codestrafe.DebugCodeStrafeStateAction"
                text="CodeStrafe: Debug State"
                description="Show CodeStrafe internal state">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>