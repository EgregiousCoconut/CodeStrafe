<idea-plugin>
    <id>com.codestrafe</id>
    <name>CodeStrafe</name>
    <vendor>Samuel George</vendor>

    <description>
        Game-inspired navigation system for accessible programming.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Runs after a project opens -->
        <startupActivity implementation="com.codestrafe.CodeStrafeStartupActivity"/>
    </extensions>

    <!-- Runs at IDE frame creation (Welcome screen included) -->
    <applicationListeners>
        <listener class="com.codestrafe.CodeStrafeAppLifecycleListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

    <actions>
        <action id="CodeStrafe.ToggleMode"
                class="com.codestrafe.ToggleCodeStrafeModeAction"
                text="Toggle CodeStrafe Navigation Mode"
                description="Toggle CodeStrafe Navigation Mode">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>

        <action id="CodeStrafe.DebugState"
                class="com.codestrafe.DebugCodeStrafeStateAction"
                text="CodeStrafe: Debug State"
                description="Show CodeStrafe internal state">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>